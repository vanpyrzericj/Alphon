@model IEnumerable<WebApp.Models.Major>
<div class="page-content">
    <h1 class="page-title">
        Majors
    </h1>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Admin">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Majors
            </li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group">
                <a class="btn btn-fit-height blue" href="#create-major" data-toggle="modal">
                    <i class="fa fa-plus"></i> Create Major
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="majorList">
                        <thead>
                            <tr>
                                <th> Full Name </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var major in Model)
                            {
                                <tr>
                                    <th><a href="/Admin/Majors/@major.Id">@major.fullname (@major.name)</a></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modals -->
<div class="modal fade" id="create-major" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Create Major</h4>
            </div>
            <form asp-route="areaRoute" asp-route-area="Admin" asp-route-controller="Majors" asp-route-action="Create" method="post" id="CreateMajorForm">
                <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Coded Name (two or three letters)</label>
                                    <input class="form-control" type="text" name="major.name" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Full Name</label>
                                    <input class="form-control" type="text" name="major.fullname" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Degree Type</label>
                                    <select class="form-control" name="major.type">
                                        <option>B.S.</option>
                                        <option>B.F.A</option>
                                        <option>B.A.</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                    <input id="CreateMajorSubmitBtn" type="submit" value="Create" class="btn green-jungle" />
                </div>
            </form>
        </div>
    </div>
</div>
@section PageScripts{
    <script>
        $(document).ready(function () {
            $("#majorList")
                .dataTable();
        });
    </script>
}
