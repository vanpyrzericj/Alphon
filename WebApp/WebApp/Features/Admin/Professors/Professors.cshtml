@model IEnumerable<WebApp.Models.Professor>
<div class="page-content">
    <h1 class="page-title">
        Professors
    </h1>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Admin">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Professors
            </li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group">
                <a class="btn btn-fit-height blue" href="#create-professor" data-toggle="modal">
                    <i class="fa fa-plus"></i> Create Professor
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="professorList">
                        <thead>
                            <tr>
                                <th> First Name </th>
                                <th> Last Name </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var professor in Model)
                            {
                                <tr>
                                    <th><a href="/Admin/Professors/@professor.Id">@professor.firstname</a></th>
                                    <th>@professor.lastname</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modals -->
<div class="modal fade" id="create-professor" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Create Professor</h4>
            </div>
            <form asp-route="areaRoute" asp-route-area="Admin" asp-route-controller="Professors" asp-route-action="Create" method="post" id="CreateProfessorForm">
                <div class="modal-body">
                    <div class="form-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input class="form-control" type="text" name="professor.firstName" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input class="form-control" type="text" name="professor.lastName" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn dark btn-outline" data-dismiss="modal">Cancel</button>
                    <input id="CreateProfessorSubmitBtn" type="submit" value="Create" class="btn green-jungle" />
                </div>
            </form>
        </div>
    </div>
</div>
@section PageScripts{
    <script>
        $(document).ready(function () {
            $("#professorList")
                .dataTable();
        });
    </script>
}
