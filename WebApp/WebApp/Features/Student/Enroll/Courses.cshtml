@model IEnumerable<WebApp.Features.Student.Enroll.CourseFilterResult>
<div class="page-content">
    <h1 class="page-title">
        Search Results
    </h1>
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="/Student">Dashboard</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="/Student/Enroll">Enroll</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                Search Results
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="courseList">
                        <thead>
                            <tr>
                                <th> Name </th>
                                <th> Number </th>
                                <th> Description </th>
                                <th> Type </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var course in Model)
                            {
                                <tr>
                                    <th><a href="/Student/Enroll/1/Courses/@course.offeringid">@course.coursename</a></th>
                                    <th>@course.coursenumber</th>
                                    <th>@course.cousedescription</th>
                                    <th>@course.type</th>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section PageScripts{
    <script>
        $(document).ready(function () {
            $("#courseList")
                .dataTable();
        });
    </script>
}
